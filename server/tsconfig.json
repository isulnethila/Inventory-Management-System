{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "resolveJsonModule": true,
    "isolatedModules": true,

    "allowSyntheticDefaultImports": true,

    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "prisma"],
  "exclude": ["node_modules"]
}
